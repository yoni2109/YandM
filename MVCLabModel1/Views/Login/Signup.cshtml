@model YandM.Models.UsersVM
@{
    ViewBag.title = "Signup page";
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<br />
<br />
<br />
<h2>Signup Form</h2>

<form action="SubmitSignup" method="post">
    <table>
        <tr>
            <td>First Name</td>
            <td>@Html.TextBoxFor(m => m.user.FirstName) <span style="color:red">@Html.ValidationMessageFor(x => x.user.FirstName)</span></td>
        </tr>
        <tr>
            <td>Last Name</td>
            <td>@Html.TextBoxFor(m => m.user.LastName) <span style="color:red">@Html.ValidationMessageFor(x => x.user.LastName)</span></td>
        </tr>
        <tr>
            <td>User Name</td>
            <td>@Html.TextBoxFor(m => m.user.UserName) @if (ViewBag.username != null)
            {<span style="color:red">@ViewBag.username</span> }<span style="color:red">@Html.ValidationMessageFor(x => x.user.UserName)</span></td>
        </tr>
        <tr>
            <td>Phone Number</td>
            <td>@Html.TextBoxFor(m => m.user.UserPN) <span style="color:red">@Html.ValidationMessageFor(x => x.user.UserPN)</span></td>
        </tr>
        <tr>
            <td>E-mail</td>
            <td>@Html.TextBoxFor(m => m.user.UserEmail) <span style="color:red">@Html.ValidationMessageFor(x => x.user.UserEmail)</span></td>
        </tr>
        <tr>
            <td>Password</td>
            <td>@Html.PasswordFor(m => m.user.UserPassword) <span style="color:red">@Html.ValidationMessageFor(x => x.user.UserPassword)</span></td>
        </tr>
        <tr>
            <td colspan="2"><input id="Submit1" type="submit" value="Sign up" /></td>
        </tr>
    </table>
    <p>
    </p>

</form>