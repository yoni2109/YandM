@model YandM.Models.ProductsVM
@using YandM.Models
<head>
<meta name="viewport" content="width=device-width" />
</head>

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<br/>
<br />
<br />
    <body>
        <h2>Add New Product</h2>
        <form action="Submit" method="post" />
            <table>
                <tr>
                    <td>Product Name</td>
                    <td>@Html.TextBoxFor(m => m.product.product_name) @Html.ValidationMessageFor(x => x.product.product_name)</td>
                </tr>
                <tr>
                    <td>Product Image</td>
                    <td>@Html.TextBoxFor(m => m.product.img_url)@Html.ValidationMessageFor(x => x.product.img_url)</td>
                </tr>
                <tr>
                    <td>Product Price</td>
                    <td>@Html.TextBoxFor(m => m.product.price)@Html.ValidationMessageFor(x => x.product.price)</td>
                    </tr>
                <tr>
                    <td>Product Description</td>
                    <td>@Html.TextBoxFor(m => m.product.description)@Html.ValidationMessageFor(x => x.product.description)</td>
                </tr>
                <tr>
                    <td>Type:</td>
                    <td>@Html.DropDownListFor(
                       m=>m.product.type, new List<SelectListItem>
                                 { new SelectListItem { Text = "Dogs", Value = "Dogs"},
                                   new SelectListItem { Text = "Cats", Value = "Cats"},
                                   })</td>
                </tr>
                <tr>
                    <td colspan="2"><input id="Submit1" type="submit" value="Add Product" /></td>
                </tr>
            </table>
        @Html.Partial("DisplayProducts", Model)
</body>


